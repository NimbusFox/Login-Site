@using NimbusFox.Login_Site.CodeLibraries.Core
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;

    if (Request.QueryString.HasKeys()) {
        if (Request.QueryString.HasKey("call")) {
            try {
                Html.RenderAction(Request.QueryString.GetValue("call"), GlobalHelper.AjaxGateway);
            } catch (Exception ex) {
                if (ex.HasExceptionOtherThan(typeof(HttpException))) {
                    // Will ignore errors that say a certain function doesn't exist
                } else {
                    throw;
                }
            }
        }
    }
}