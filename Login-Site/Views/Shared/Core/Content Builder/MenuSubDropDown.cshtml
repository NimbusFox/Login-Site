@using Login_Site.CodeLibraries.Core
@model Login_Site.Models.Core.Content_Builder.MenuSubDropDown
<li class="dropdown-submenu">
    <a class="dropdown-item dropdown-toggle" data-toggle="dropdown" href="#" id="@Model.Text" aria-expanded="false">@Model.Text <span class="caret"></span></a>
    <ul class="dropdown-menu" aria-labelledby="@Model.Text">
        @foreach (var child in Model.Children) {
            @Html.Action(child.DocumentTypeAlias, GlobalHelper.ContentBuilder, new { page = child })
        }
    </ul>
</li>